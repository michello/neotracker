<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8">
    <title>neotracker</title>
    <meta name="description" content="an analytical site to track a neopets guild">
    <meta name="author" content="michelle">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="https://i.imgur.com/LVias9C.png"/>
    <!-- Compiled and minified CSS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <!-- Compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js" integrity="sha384-a5N7Y/aK3qNeh15eJKGWxsqtnX/wWdSZSKp+81YjTmS15nvnvxKHuzaWwXHDli+4" crossorigin="anonymous"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <style>
      textarea.textContent {
        width: 300px;
        height: 200px;
        resize: none;
      }
      input[type="text"] {
        width: 300px;
      }

      .right {
        float:right;
      }
      .left {
        float:left;
      }
      .left::after, .right::after {
        clear:both;
      }
      span.selection {
        border: none;
        min-width:300px;
      }

      .select2-results {
        display: block;
        position: relative;
      }
    </style>
  </head>
  <body>
    <div id = "content">
      <header>
        <div id= "title">
          <span id="neo">NEO</span><span id="tracker">TRACKER</span>
        </div>
      </header>
        <h1>Login</h1>
        <% if(typeof error !== 'undefined'){ %>
          <div class="alert alert-warning">
            <strong>Error: </strong> <%= error %>
          </div>
        <% } %>

        <form action="/login" method="POST">
          <div class = "row">
            <div class="col">
              <p>1. Enter your username:</p>
                <input type="text" name="username" placeholder="username" required/>
            </div>
            <div class="col">
              <p>2. Enter your password:</p>
                <input type="password" name="password" placeholder="password" required/>

            </div>
          </div>
          <p>
          <center><input type="submit" value =Submit class="button"/></center>
        </p>
        </form>

    </div>
  </body>
</html>
